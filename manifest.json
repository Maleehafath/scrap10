{
  "manifest_version": 3,
  "name": "Search Countdown",
  "version": "1.0",
  "description": "Shows a countdown timer when searching",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Search Countdown"
  }
}
